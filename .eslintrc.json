{
	"extends": [
		"next/core-web-vitals",
		"next/typescript",
		"airbnb",
		"airbnb-typescript",
		"prettier"
	],
	"plugins": ["jsx-a11y","react-hooks","import","prettier"],
	"rules": {
		"prettier/prettier": ["error"],
		"import/order": [
			"error",
			{
				"groups": [
					"type",
					"builtin",
					"external",
					"internal",
					"parent",
					"sibling",
					"index",
					"unknown"
				],
				"pathGroups": [
					{
						"pattern": "react*",
						"group": "external",
						"position": "before"
					},
					{
						"pattern": "@pages/**",
						"group": "internal",
						"position": "after"
					},
					{
						"pattern": "@components/**",
						"group": "internal",
						"position": "after"
					}
				],
				"alphabetize": {
					"caseInsensitive": true,
					"order": "asc"
				},
				"pathGroupsExcludedImportTypes": []
			}
		]
	},
	"parserOptions": {
		"project": "./tsconfig.json"
	}
}
